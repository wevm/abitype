{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "abitype": ["src"],
      "abitype/test": ["src/test"],
      "abitype/zod": ["src/zod"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["examples", "playground", "scripts", "src", "*.ts"]
}
